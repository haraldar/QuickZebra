<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Product>QuickZebra</Product>
    <Company>Harald Asmus</Company>
    <Authors>Harald Asmus</Authors>
    <Version>1.1.0</Version>
    <PackageId>QuickZebra</PackageId>
    <Description>Quickly define the elements on a Zebra label and generate the ZPL code. For rendering of a label: Includes support for Labelary's API.</Description>
    <Copyright>MIT</Copyright>
    <PackageProjectUrl>https://github.com/haraldar/QuickZebra</PackageProjectUrl>
    <RepositoryUrl>https://github.com/haraldar/QuickZebra</RepositoryUrl>
    <PackageIcon>icon_qz.jpg</PackageIcon>
    <ApplicationIcon>icon_qz.ico</ApplicationIcon>
    <RepositoryType>git</RepositoryType>
    <PackageTags>labelary, zebra, zpl, printer, label</PackageTags>
    <PackageReleaseNotes>Initial release.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="icon_qz.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Update="icon_qz.jpg">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
